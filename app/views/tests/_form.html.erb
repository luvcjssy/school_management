<%= form_for @test do |f| %>
  <div class=" pb-2 mb-3 pt-3">
    <div class="btn-toolbar mb-2 mb-md-0">
      <%= link_to tests_path, class: "btn btn-secondary mr-3" do %>
        <i class="fa fa-arrow-left"></i> Back
      <% end %>

      <%= button_tag( :class => "btn btn-primary") do %>
        <i class="fa fa-save"></i> Save
      <% end %>

      <%= link_to_add_fields "<i class='fa fa-plus'></i>".html_safe + ' Question', f, :questions, 'add_questions' %>
    </div>
  </div>

  <% if @test.errors.any? %>
    <div class="alert alert-danger"><% @test.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %></div>
  <% end %>

  <div class="form-group row">
    <%= f.label 'Name *', class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :name, class: "form-control", placeholder: 'Give the Test a name here...' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :description, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_area :description, class: "form-control", placeholder: 'Enter a description here...' %>
    </div>
  </div>

  <hr>

  <!--  Question inputs-->
  <div id="question_list">
    <%= f.fields_for :questions do |question| %>
      <%= render 'question_fields', f: question %>
    <% end %>
  </div>

<% end %>
