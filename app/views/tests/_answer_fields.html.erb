<tr>
  <td>
    <div class="nested-fields">
      <%= f.hidden_field :_destroy %>

      <div class="form-row align-items-center">
        <div class="col-sm-8 my-1">
          <%= f.text_field :result, class: "form-control", placeholder: 'Option...' %>
        </div>
        <div class="col-sm-3 my-1">
          <div class="form-check">
            <%= f.check_box :correct, class: "form-check-input" %>
            <label class="form-check-label">
              Correct answer
            </label>
          </div>
        </div>
        <div class="col-sm-1 my-1 align-self-center text-right">
          <%= link_to '#', class: "remove_fields" do %>
            <i class="fa fa-trash remove_answer_fields"></i>
          <% end %>
        </div>
      </div>
    </div>
  </td>
</tr>
